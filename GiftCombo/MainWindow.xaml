<Window x:Class="GiftCombo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GiftCombo.Views"
        Title="GiftCombo" Height="600" Width="900">

    <TabControl x:Name="Tabs">
        <TabItem Header="Items">
            <views:ItemsView />
        </TabItem>
        <TabItem Header="Combos">
            <views:CombosView />
        </TabItem>
        <TabItem Header="Sales">
            <views:SalesView />
        </TabItem>
    </TabControl>
</Window>
